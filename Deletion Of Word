#include <stdio.h>
#include <stdlib.h>
#include <string.h>
int main(){
    int i,j,k,l,m,p,s,f,count = 0,skip;
    char a[100],b[100],c[100];
    printf("Enter A String: \n");
    gets(a);
    printf("Enter Word to be deleted : \n");
    gets(b);
    l = strlen(b);
    i = 0;
    while(a[i] != '\0'){
        k = 0;
        s = i;
        m = strlen(a);
        while(a[i] != ' '&&a[i] != '\n' && a[i] != '\0'){
            c[k] = a[i];
            k++;i++;
        }
        c[k] = '\0';
        j = 0;f= 0;
        if(strcmp(c,b)==0){
            f = 1;
            count++;
        }

        if(f == 1){
                skip = l;
                if(a[i] == ' '){
                    skip = skip + 1;
                }
            for(p = s; a[p + skip] != '\0';p++){
                a[p] = a[p+skip];
            }
            a[p] = '\0';
            i=s;
        }
        if(a[i] == ' '){
            i++;
        }
        if(a[i] == '\n'){
            break;

        }
    }

    puts(a);
    printf("\nThe Word occured %d times\n" , count);


    return 0;
}
